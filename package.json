{
  "name": "exploration",
  "version": "1.5.3",
  "description": "",
  "license": "MIT",
  "author": "Jared Lunde <jared.lunde@gmail.com> (https://jaredlunde.com/)",
  "homepage": "https://github.com/jaredLunde/exploration#readme",
  "repository": "github:jaredLunde/exploration",
  "bugs": "https://github.com/jaredLunde/exploration/issues",
  "main": "dist/main/index.js",
  "module": "dist/module/index.js",
  "files": [
    "/dist",
    "/src",
    "/types"
  ],
  "scripts": {
    "build": "lundle build",
    "check-types": "lundle check-types",
    "dev": "lundle build -f module,cjs -w",
    "format": "prettier --write \"{,!(node_modules|dist|coverage)/**/}*.{ts,tsx,js,jsx,md,yml,json}\"",
    "lint": "eslint . --ext .ts,.tsx",
    "prepare": "husky install",
    "test": "jest",
    "validate": "lundle check-types && pnpm run lint && jest --coverage"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "sideEffects": false,
  "types": "types/index.d.ts",
  "dependencies": {
    "@essentials/memoize-one": "^1.1.0",
    "@essentials/request-timeout": "^1.3.0",
    "@react-hook/hotkey": "^3.1.0",
    "clsx": "^1.1.1",
    "trie-memoize": "^1.2.0",
    "use-sync-external-store": "^1.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@swc-node/core": "^1.9.0",
    "@swc-node/jest": "^1.5.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.2.1",
    "@types/is-relative": "^1.0.0",
    "@types/jest": "^28.1.3",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/use-subscription": "^1.0.0",
    "@types/use-sync-external-store": "^0.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-lunde": "^0.7.1",
    "husky": "^8.0.1",
    "jest": "^28.0.2",
    "jest-environment-jsdom": "^28.0.2",
    "lint-staged": "^13.0.3",
    "lundle": "^0.4.14",
    "prettier": "latest",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-test-renderer": "^18.2.0",
    "semantic-release": "^19.0.3",
    "type-fest": "^2.12.2",
    "typescript": "latest"
  },
  "keywords": [
    "file browser",
    "file explorer",
    "file tree",
    "react",
    "react component",
    "react file browser",
    "react file explorer",
    "react file tree"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "lunde"
    ],
    "parserOptions": {
      "project": [
        "./tsconfig.eslint.json"
      ]
    },
    "rules": {
      "@typescript-eslint/no-floating-promises": "error",
      "@typescript-eslint/no-misused-promises": "error"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "dist",
    "/types",
    "/examples",
    "test",
    "*.config.js"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "module": "./dist/module/index.js",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/main/index.js",
      "source": "./src/index.ts",
      "types": "./types/index.d.ts",
      "default": "./dist/main/index.js"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "globals": {
      "__DEV__": true
    },
    "moduleDirectories": [
      "node_modules",
      "src",
      "test"
    ],
    "setupFilesAfterEnv": [
      "./test/setup.ts"
    ],
    "snapshotResolver": "./test/resolve-snapshot.js",
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/src/**/?(*.)test.{ts,tsx}"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc-node/jest",
        {
          "react": {
            "runtime": "automatic",
            "development": false,
            "useBuiltins": true
          }
        }
      ]
    },
    "transformIgnorePatterns": []
  },
  "lint-staged": {
    "package.json": [
      "pnpm dlx prettier-package-json --write"
    ],
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --ext .ts,.tsx,.js,.jsx --fix",
      "prettier --write"
    ],
    "**/*.{md,yml,json}": [
      "prettier --write"
    ]
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "next",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "types",
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "source": "src/index.ts"
}
